syntax on

" Vim-Plug Plugin Manager.
call plug#begin('~/.vim/extensions')
      Plug 'tpope/vim-surround'
      Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
      Plug 'junegunn/fzf.vim'
      Plug 'tpope/vim-commentary'
      Plug 'airblade/vim-gitgutter'
      Plug 'vim-syntastic/syntastic'
call plug#end()

" Import filetype settings from ~/.vim/ftplugin
filetype plugin on

" set autoindent
set number
set numberwidth=3

" Set Ruler
set colorcolumn=79
highlight ColorColumn ctermbg=233 

set showcmd
set showmode
set backspace=indent,eol,start

" Soft-Wrap text at 80 columns:
set textwidth=0
set wrapmargin=0
set wrap
set linebreak 
" set columns=80

" set listchars=space:â€¢,tab:->
" set list
" highlight SpecialKey ctermfg=233

" Key remapping
:imap jj <Esc>

" Set TAB to 2 Spaces
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set smarttab

" Remove '^G' from beginning of files on Mac using NerdTree:
let g:NERDTreeNodeDelimiter = "\u00a0"

" Configure FZF to use CTRL-P bindings
let g:fzf_action = {
      \ 'ctrl-s': 'split',
      \ 'ctrl-v': 'vsplit'
      \ }
nnoremap <C-p> :FZF<cr>

" Syntastic Linter Settings
" https://github.com/vim-syntastic/syntastic
set statusline+=%#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*

let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 0
let g:syntastic_check_on_open = 0
let g:syntastic_check_on_wq = 0
let g:syntastic_mode_map = { 'passive_filetypes': ['xml'] }
let g:syntastic_ruby_checkers = ['rubocop']
let g:syntastic_python_checkers = ['flake8']
" Use '\sc' to check syntax
nmap <leader>sc :SyntasticCheck<CR> 

" Avro Schema (.avsc) files are JSON
autocmd BufRead,BufNewFile *.avsc setlocal filetype=json


" YAML Editing
autocmd FileType yaml setlocal ts=2 sts=2 sw=2 expandtab

